{
  "name": "node-sqlite-undo-log",
  "version": "1.0.0",
  "description": "An undo log for SQLite3 driven by Javascript",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "webpack",
    "start": "yarn run build && node ./bin/index.js",
    "watch": "webpack -w",
    "test": "jest --coverage",
    "diagrams": "puml generate docs/tables.puml -s -o docs/tables.svg && puml generate docs/architecture.puml -s -o docs/architecture.svg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lotes/sqlite-undo-log.git"
  },
  "keywords": [
    "undo",
    "log",
    "sqlite3",
    "sqlite",
    "typescript",
    "javascript"
  ],
  "author": "Markus Rudolph",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lotes/sqlite-undo-log/issues"
  },
  "homepage": "https://github.com/Lotes/sqlite-undo-log#readme",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.12",
    "@types/sqlite3": "^3.1.8",
    "jest": "^27.4.7",
    "jest-sonar-reporter": "^2.0.0",
    "sqlite3": "^5.0.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@types/lodash": "^4.14.182",
    "djinject": "^0.1.0",
    "lodash": "^4.17.21",
    "ts-assert-unreachable": "^0.0.9"
  }
}
