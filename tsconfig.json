{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "rootDir": "./",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["raw-loader", "node", "jest"]
  },
  "include": ["**/*.ts"],
}
